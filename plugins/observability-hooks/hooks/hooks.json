{
  "$schema": "https://anthropic.com/claude-code/hooks.schema.json",
  "version": "1.0.0",
  "hooks": {
    "PreToolUse": [
      {
        "name": "pre-tool-validation",
        "description": "Validates and monitors tool usage before execution",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/pre_tool_use.py"
          },
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/send_event.py --source-app observability-hooks --event-type PreToolUse --summarize"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "name": "post-tool-tracking",
        "description": "Tracks and logs tool usage after execution",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/post_tool_use.py"
          },
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/send_event.py --source-app observability-hooks --event-type PostToolUse --summarize"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "name": "session-initializer",
        "description": "Logs session start events",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/session_start.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "name": "session-cleanup",
        "description": "Logs session end and saves session data",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/session_end.py",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "name": "stop-handler",
        "description": "Logs stop signals and handles graceful shutdown",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/stop.py",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "name": "subagent-stop-handler",
        "description": "Tracks subagent termination and logs metrics",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/subagent_stop.py",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "name": "prompt-preprocessor",
        "description": "Logs and preprocesses user prompts",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/user_prompt_submit.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "name": "pre-compact-handler",
        "description": "Logs pre-compaction events",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/hooks/pre_compact.py",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
